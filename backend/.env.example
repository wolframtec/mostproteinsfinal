# ============================================
# MostProteins API Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Security
BCRYPT_ROUNDS=12
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SendGrid Configuration (for email notifications)
# Get from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@mostproteins.com
SENDGRID_FROM_NAME=MostProteins

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://mostproteins.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/mostproteins
# REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOK_VERIFICATION=true
ENABLE_RATE_LIMITING=true
